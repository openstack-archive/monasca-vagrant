{
  "name": "Mini-Mon",
  "description": "Sets up the entire monitoring stack on one box",
  "json_class": "Chef::Role",
  "default_attributes": {
    "apt": {
      "periodic_update_min_delay": 60
    },
    "monasca_agent": {
      "plugin": {
        "host_alive": {
          "init_config": {
            "ssh_port": 22,
            "ssh_timeout": 0.5,
            "ping_timeout": 1
          },
          "instances": {
            "devstack": {
              "name": "devstack",
              "host_name": "192.168.10.5",
              "alive_test": "ssh"
            }
          }
        }
      }
    },
    "java": {
      "install_flavor": "openjdk",
      "jdk_version": "7"
    },
    "storm": {
      "nimbus": {
        "host": {
          "fqdn": "127.0.0.1"
        }
      },
      "ui": {
        "port": "8088"
      },
      "zookeeper": {
        "quorum": [
          "127.0.0.1"
        ]
      }
    }
  },
  "override_attributes": {
  },
  "chef_type": "role",
  "run_list": [
    "recipe[mini-mon]",
    "recipe[monasca_api]",
    "recipe[storm::nimbus]",
    "recipe[storm::supervisor]",
    "recipe[monasca_thresh]",
    "recipe[monasca_agent]"
  ],
  "env_run_lists": {
  }
}
